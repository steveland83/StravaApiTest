@model IEnumerable<StravaApiTest.Models.ActivityEntity>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Activity List</h2>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Distance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MovingTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ElapsedTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ElevationGain)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDateLocal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Distance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MovingTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ElapsedTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ElevationGain)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDateLocal)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { activityId = item.Id }) | 
            @Html.ActionLink("View Stream Data", "OpenAllStreams", new { athleteId = item.AthleteId, activityId = item.Id }, new { target = "_blank" })            
        </td>
    </tr>
}

</table>
