@model com.strava.api.Streams.ActivityStream

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Stream Data</h2>

<div>
    <h4>@Model.SeriesType</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.StreamType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StreamType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OriginalSize)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OriginalSize)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Resolution)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Resolution)
        </dd>
    </dl>
    <hr />
    <h4>All Data Points:</h4>
    <hr />
    @foreach (var dataPoint in Model.Data) { 
        var firendlyData = dataPoint.ToString();
        @Html.DisplayFor(x => firendlyData)<br />
    }
</div>
